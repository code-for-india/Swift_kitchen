<h1>Listing drivers</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Device</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Kitchen</th>
      <th>Route</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.device_id %></td>
        <td><%= driver.name %></td>
        <td><%= driver.phone %></td>
        <td><%= driver.kitchen %></td>
        <td><%= driver.route %></td>
        <td><%= link_to 'Show', driver %></td>
        <td><%= link_to 'Edit', edit_driver_path(driver), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', driver, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

