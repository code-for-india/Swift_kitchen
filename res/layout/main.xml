<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fadingEdge="horizontal"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:minHeight="80dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbars="horizontal|vertical"
    tools:context=".FirstPage" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/empty"
        android:focusable="false"
        android:orientation="vertical"
        android:paddingBottom="-10dp"
        android:paddingLeft="-10dp"
        android:paddingTop="-10dp"
        android:src="@drawable/grey"
        android:tileMode="repeat" />

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignTop="@+id/imageView2"
        android:layout_margin="1dp"
        android:focusable="false"
        android:gravity="right"
        android:paddingRight="6dp"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/akslogo"
        android:focusable="false"
        android:src="@drawable/apl" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignTop="@+id/image_view"
        android:contentDescription="@string/cfilogo"
        android:focusable="false"
        android:layout="@+id/image_view"
        android:src="@drawable/cfil" >
    </ImageView>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:paddingTop="3dp" >

        <View
            android:id="@+id/redLine0"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/red_grad_bg_26" />

        <Button
            android:id="@+id/pullRoute"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Pull Route" />

        <Button
            android:id="@+id/startNav"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Start Nav" />

        <Button
            android:id="@+id/setting"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Configure" />
    </LinearLayout>

</RelativeLayout>